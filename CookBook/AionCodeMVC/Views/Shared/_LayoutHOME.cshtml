                <ul >
                    <li >
                        <a  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li >
                        <a  asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Recipe" asp-action="Index">Przepisy</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Logowanie</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Rejestracja</a>
                    </li>
                   
                </ul>

            </div>
            <div id="img"><img src="~/images/AION-logo_Big.png" alt="sample logo"> 
      
            </div>
        </header>
        <div id="content">
            
            <div class="notOnDesktop">
                <!-- This search box is displayed only in mobile and tablet laouts and not in desktop layouts -->
                <input type="text" placeholder="Search">
            </div>
            <section id="mainContent">
                <!--************************************************************************
                Main Blog content starts here
                ****************************************************************************-->
                
                @RenderBody()

                <aside id="authorInfo">
                    <!-- The author information is contained here -->
