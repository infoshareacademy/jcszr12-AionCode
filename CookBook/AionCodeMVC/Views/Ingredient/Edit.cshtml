@using Database.EnumTypes
@model CookBook.BuisnesLogic.DTO.IngredientEditDTO

@{
    ViewData["Title"] = "Edit";

    //Setting up Type dropdownlsit
    var enumSelectList = new SelectList(Enum.GetValues(typeof(IngredientType)));
    var selectedValue = Model.Type.ToString();
    var selectedItem = enumSelectList.FirstOrDefault(x => x.Value == selectedValue);
    if (selectedItem != null)
    {
        selectedItem.Selected = true;
    }
}


