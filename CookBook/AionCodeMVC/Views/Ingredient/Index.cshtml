@*                         <!--@Html.DisplayNameFor(model => model.PhotoUrl)--> *@
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                        Lp++;
                        <tr>
                        <td>
                            @Lp
