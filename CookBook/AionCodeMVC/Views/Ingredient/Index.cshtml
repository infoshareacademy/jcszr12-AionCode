                            @Html.DisplayFor(modelItem => item.Proteins)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fats)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Carbohydrates)
                        </td>  
                        <td>
@*                             <img src=@item.PhotoUrl height="100" width="100"/> *@
                        </td>
                        <td>
                            @Html.ActionLink("Edytuj", "Edit", new { name = item.Name }) |
                            @Html.ActionLink("Szczegóły", "Details", new { name = item.Name }) |
                            @Html.ActionLink("Usuń", "Delete", new { name = item.Name })|
                            @Html.ActionLink("Uploaduj", "Upload", new { id = item.Id })
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>