@using Database.EnumTypes
@model CookBook.BuisnesLogic.DTO.IngredientDetailedDTO

@{
    ViewData["Title"] = "Create Ingredient";

    //Setting up Type dropdownlsit
    var enumSelectList = new SelectList(Enum.GetValues(typeof(IngredientType)));
}

<h1 class="text-center bg-transparent">Dodaj nowy składnik</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
@*                 <div class="form-group">
                    <label asp-for="Type" class="control-label">Type:</label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div> *@
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" asp-items="enumSelectList" class="form-control">
                        <option value="">-- Wybierz z listy --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Calories" class="control-label">Calories:</label>
                    <input asp-for="Calories" class="form-control" type="number" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Proteins" class="control-label">Proteins:</label>
                    <input asp-for="Proteins" class="form-control" type="number" />
                    <span asp-validation-for="Proteins" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fats" class="control-label">Fats:</label>
                    <input asp-for="Fats" class="form-control" type="number" />
                    <span asp-validation-for="Fats" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Carbohydrates" class="control-label">Carbohydrates:</label>
                    <input asp-for="Carbohydrates" class="form-control" type="number" />
                    <span asp-validation-for="Carbohydrates" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GI" class="control-label">GI:</label>
                    <input asp-for="GI" class="form-control" />
                    <span asp-validation-for="GI" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}