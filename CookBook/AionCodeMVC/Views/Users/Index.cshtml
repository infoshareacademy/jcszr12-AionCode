@model IEnumerable<CookBook.BuisnesLogic.DTO.UserCookBookDto>

@{
    ViewData["Title"] = "Users";
}
<h1 class="mb-4">Lista użytkowników</h1>
<hr/>

<div class="container mt-5">
    <p>
        <a asp-action="RegisterUser" class="btn btn-primary">Nowy uzytkownik</a>
    </p>
    <table class="table table-bordered table-striped">
        <thead class="thead-dark"
        <tr>
            <th>
                    @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.ActionLink("Edycja", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Usunięcie", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>