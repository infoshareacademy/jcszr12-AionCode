@model Database.Entities.MealDay

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Edit</h1>
<h4 class="text-center">MealDay</h4>
<hr />
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="@Model.Id" />
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="@Model.Day" asp-format="{0:yyyy/MM/dd HH:mm}" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="AddDate" class="form-control" />
                <span asp-validation-for="@Model.AddDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="UserCookBookId" class="form-control" />
                <span asp-validation-for="@Model.UserCookBookId" value ="@Model.UserCookBookId"class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary bg-warning" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
