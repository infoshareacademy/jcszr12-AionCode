@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Załącz obraz</h1>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Upload", "Recipe", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            @Html.TextBox("file", "", new { type = "file", accept = ".png, .jpg, .jpeg", @class = "form-control-file" })
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Zapisz</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</div>